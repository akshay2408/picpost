<header class="d-flex justify-content-between align-items-center bg-dark py-2 px-4 custom-header">
  <%= link_to posts_path, class: "text-decoration-none" do %>
    <h2 class="text-white">Dashboard</h2>
  <% end %>
  <% if user_signed_in? %>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to 'New post', new_post_path, remote: true, class: 'btn btn-primary me-3 rounded-pill px-4' %>
      <%= link_to 'My post', my_posts_posts_path, class: 'btn btn-primary me-3 rounded-pill px-4' %>
      <div class="text-decoration-none btn btn-light rounded-pill px-4">
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
      </div>
    </div>
  <% end %>
</header>