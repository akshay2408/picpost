<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><strong>Caption:</strong> <%= @post.caption %></h5>
          <div class="mb-3">
            <%= image_tag @post.image if @post.image.attached?%>
          </div>
          <p class="card-text">
            <strong>User:</strong> <%= @post.user.username %>
          </p>
          <%= render @post.comments %>
        </div>
        <div class="card-footer">
          <div class="btn-group" role="group">
            <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
            <%= link_to 'Back', posts_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
